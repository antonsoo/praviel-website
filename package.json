{
  "name": "praviel-site",
  "version": "0.0.5",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "next dev",
    "with-release": "tsx scripts/with-release.ts",
    "ensure:observability": "tsx scripts/check-observability.ts",
    "build": "pnpm run ensure:observability && pnpm run with-release next build --webpack",
    "preview": "pnpm run ensure:observability && pnpm run with-release opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "pnpm run ensure:observability && pnpm run with-release opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "pnpm run ensure:observability && pnpm run with-release opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test:e2e": "tsx scripts/run-playwright.ts",
    "test:e2e:ci": "playwright test",
    "test:e2e:prod": "BASE_URL=https://praviel-site.antonnsoloviev.workers.dev pnpm test:e2e:ci --project=chromium-desktop",
    "perf:audit": "tsx scripts/lighthouse.ts",
    "sentry:smoke": "pnpm run with-release tsx scripts/sentry-smoke.ts"
  },
  "engines": {
    "node": ">=25.0.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@opennextjs/cloudflare": "https://pkg.pr.new/@opennextjs/cloudflare@main",
    "@sentry/nextjs": "^10.23.0",
    "@vercel/analytics": "^1.5.0",
    "drizzle-orm": "^0.44.7",
    "feed": "^5.1.0",
    "gray-matter": "^4.0.3",
    "lenis": "^1.3.14",
    "motion": "^12.23.24",
    "next": "^16.0.1",
    "next-plausible": "^3.12.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reading-time": "^1.5.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@fontsource/noto-sans": "^5.2.10",
    "@fontsource/noto-sans-devanagari": "^5.2.8",
    "@fontsource/noto-sans-hebrew": "^5.2.8",
    "@fontsource/noto-serif": "^5.2.9",
    "@fontsource/noto-serif-display": "^5.2.9",
    "@playwright/test": "^1.56.1",
    "@puppeteer/browsers": "^2.10.13",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/wait-on": "^5.3.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "chrome-launcher": "^1.2.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "lighthouse": "^13.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "wait-on": "^9.0.1",
    "wrangler": "^4.46.0"
  }
}
